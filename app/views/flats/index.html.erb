<div class="header">
  <h3>A Simple Airbnb</h3>
  <%= link_to 'Add Flat', new_flat_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <h1>All our Flats (<%= Flat.all.size %>)</h1>
  <% @flats.each do |flat| %>
    <div class="flat">
      <h2><%= flat.name %></h2>
      <p><%= flat.address %></p>
      <div class="details">
        <p><%= flat.number_of_guests %></p>
        <p><%= flat.price_per_night %></p>
      </div>
      <div>More info</div>
    </div>
  <% end %>
</div>


